extends layout

block content  
  div.wrap-login100.p-t-85.p-b-20
    h2 EasyAuth
    hr
    form.login100-form.validate-form(method='POST' action='/login')                                         
      div.wrap-input100.validate-input.m-t-85.m-b-35
        input.input100(type='text' name='username' placeholder='Username')        
      div.wrap-input100.validate-input.m-b-50
        input.input100(type='password' name='password' placeholder='Password')        
      br
      div.container-login100-form-btn
        button.login100-form-btn(type='submit') Login  
  br
  br 
  div.wrap-login-credentials
    p User: admin
    p Password: 12345
